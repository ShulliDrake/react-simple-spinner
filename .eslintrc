{
  "parser": "babel-eslint",
  "rules": {
    "indent": [
        2,
        2
    ],
    "quotes": [
        2,
        "single"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "linebreak-style": [
        2,
        "unix"
    ],
    "semi": [
        2,
        "always"
    ]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ]
}